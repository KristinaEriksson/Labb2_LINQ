@model IEnumerable<Labb2_LINQ.Models.SchoolViewModel>
@{
    ViewData["Title"] = "StudentsInProgramming";
}

<h1>StudentsInProgramming</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>
                <td>
                    <a asp-action="EditTeacher" asp-route-id="@item.StudentID" asp-route-teacherId="@item.TeacherID">Edit teacher</a>
                </td>
            </tr>
        }
    </tbody>
</table>
